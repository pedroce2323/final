<div class="row">
    <div class="col-sm-9">
        <h2>
            <i class="far fa-calendar-alt"></i>
            <%= @trip[:date] %>
        </h2>
        <h1><%= @trip[:title] %></h1>
        <p><%= @trip[:description] %></p>

        <% for review in @reviews %>
            <div class="media">
                <% if review[:rating] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0">
                        <%= @users_table.where(id: review[:user_id]).to_a[0][:name] %>

                        <small>
                            (<a href="/reviews/<%= review[:id] %>/edit">edit</a> | <a href="/reviews/<%= review[:id] %>/destroy">delete</a>)
                        </small>
                    </h5>
                    <%= review[:comments] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <% if @current_user %>
                <a href="/trips/<%= @trip[:id] %>/reviews/new" class="btn btn-primary">Review this KWEST</a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Please sign in to leave a review</a>
            <% end %>
        </p>
    </div>
    <div class="col-sm-3">
        <h3>When?</h3>
        <p><%= @trip[:date] %></p>
        <h3>Where?</h3>
        <p><%= @trip[:location] %></p>
        <h3>How many reviews so far?</h3>
        <p><%= @review_count %></p>
    </div>
</div>